<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LoginActivity">

    <!--Image Section-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/circular_border"
        android:padding="15dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sanitation water and community health"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <!--Login Form-->
    <LinearLayout
        android:id="@+id/ll_login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/company_name"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--Login Text Section-->
        <TextView
            android:id="@+id/tv_enter_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Please enter your user ID and password to Login"
            android:textColor="@color/light_black"
            android:textSize="15sp" />


        <!--Edit Text Section-->
        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:id="@+id/til_user_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="20sp"-->
        <!--android:layout_marginRight="10dp">-->

        <!--<Editext-->
        <!--android:id="@+id/login_id"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="User Id"-->
        <!--android:inputType="text"-->
        <!--android:text=""-->
        <!--android:textColorHint="@color/light_black" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <EditText
            android:id="@+id/login_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:hint="User Id"
            android:inputType="text"
            android:text=""
            android:textColorHint="@color/light_black" />

        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:id="@+id/til_password"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="10sp"-->
        <!--android:layout_marginRight="10dp">-->

        <!--<EditText-->
        <!--android:id="@+id/password"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="Password"-->
        <!--android:inputType="textPassword"-->
        <!--android:text=""-->
        <!--android:textColorHint="@color/light_black" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:hint="Password"
            android:inputType="textPassword"
            android:text=""
            android:textColorHint="@color/light_black" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="10dp"
            android:background="@color/water_color_blue"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>


    <!--OTP Form-->
    <LinearLayout
        android:id="@+id/ll_otp_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/company_name"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_otp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            android:text="Verify OTP"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--Login Text Section-->
        <TextView
            android:id="@+id/tv_enter_info_text_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Please enter OTP sent to your mobile number"
            android:textColor="@color/light_black"
            android:textSize="15sp" />


        <!--Edit Text Section-->
        <!--<android.support.design.widget.TextInputLayout-->
        <!--android:id="@+id/til_otp"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_marginTop="20sp"-->
        <!--android:layout_marginRight="10dp">-->

        <!--<EditText-->
        <!--android:id="@+id/et_otp"-->
